<h1>Create a Post</h1>

<%= form_for(@post) do |f| %>
  <p><%= f.label :title %><br>
  <%= f.text_field :title %></p>

  <p><%= f.label :blogger %><br>
  <%= f.collection_select(:blogger_id, Blogger.all, :id, :name) %></p>
  
  <p><%= f.label :destination %><br>
  <%= f.collection_select(:destination_id, Destination.all, :id, :country) %></p>

  <p><%= f.label :content %><br>
  <%= f.text_area :content %></p>

  <%= f.submit %>
<% end %> 